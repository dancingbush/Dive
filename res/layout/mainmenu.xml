<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    
    
    
    





<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background15"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="10dip"
     >

    
    
    
    <ImageView 
        android:id="@+id/logo"
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/ic_icon3" />
        
    <Button
        android:id="@+id/buttonAllTests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Profile"
        android:textSize="20sp"      
        android:textColor="#FFFFFF"
        
        android:background="@drawable/button_state"
        android:visibility="gone"
         />

    <Button
        android:id="@+id/buttonTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonAllTests"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Log A Dive"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_state" 
        android:visibility="gone"
        />
    
     <Button
        android:id="@+id/buttonThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonTwo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Dive Statistics"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_state" />
     
     
     
      <Button
        android:id="@+id/buttonFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonThree"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="View All Dives"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_state"
        android:visibility="gone" />
      
       <Button
        android:id="@+id/buttonFourAndHalf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonFour"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Ad Free Version"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_state" 
        />
       
       <Button
        android:id="@+id/buttonFive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonFourAndHalf"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Gallery"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_state"
        android:visibility="gone"
         />
       
       
        <Button
        android:id="@+id/buttonSix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonFive"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Back Up Dives"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_state" />
        
        <Button
        android:id="@+id/buttonSeven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonSix"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Wind Speeds"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_state" />
        
        <Button
        android:id="@+id/buttonEight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonSeven"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Tides"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_state" />
        
        
        
        <Button
        android:id="@+id/buttonNine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonTen"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="About-Contact"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_state" />
        
        <Button
        android:id="@+id/buttonTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonEight"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Checklist"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_state" />
        
        
        <Button
        android:id="@+id/buttonTwelve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonFourAndHalf"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Dive News"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_state" 
       
        />
        
      <Button
        android:id="@+id/buttonEleven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonThree"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Dive Sites"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_state" 
        android:visibility="gone"
        />
     
     <ImageView 
        android:id="@+id/shadow"
       
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonSix"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp"
        android:background="@drawable/shadow" />
    

</RelativeLayout>
</ScrollView>

